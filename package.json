{
  "name": "twitter-connector",
  "version": "1.0.0",
  "description": "An application to connect to Twitter",
  "main": "server.ts",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "start": "node ./dist/server.js",
    "dev": "tsnd --transpile-only --inspect --ignore-watch node_modules --respawn ./ts/server.ts",
    "lint": "eslint -c .eslintrc.json --max-warnings=0 ./ts --ext .ts --fix",
    "format": "prettier --write ./ts",
    "build": "tsc"
  },
  "author": "Leonardo Lopes",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "i18next": "^21.6.10"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
